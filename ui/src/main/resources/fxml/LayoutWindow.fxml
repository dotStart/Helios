<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<HBox xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="io.github.dotstart.helios.ui.controller.LayoutWindow"
  prefHeight="400.0" prefWidth="600.0">
  <VBox>
    <Button fx:id="addButton" text="Add" onAction="#onAddComponent" prefWidth="100"/>
    <Button fx:id="removeButton" text="Remove" onAction="#onRemoveComponent" prefWidth="100"/>
  </VBox>

  <ListView fx:id="componentList"/>

  <StackPane fx:id="settingsPane"/>
</HBox>
